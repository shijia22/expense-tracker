    <form action="/" method="GET" class="my-3 my-4">
      <select class="form-select" name="category" id="category-filter" data-value="{{category}}" aria-label="Default select">
        <option value="" selected>全部類別</option>
        {{#each categories}}
        <option value="{{this._id}}">{{this.title}}</option>
        {{/each}}
      </select>
    </form>

<ul>
  {{#each records}}
    <li>
      {{this.name}}/{{this.category}}/{{this.date}}/{{this.amount}}
    </li>
    <a href="./records/new">Create</a>
  {{/each}}
</ul>