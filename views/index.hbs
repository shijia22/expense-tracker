<form action='/' method='GET' class='my-3 my-4'>
  <select
    class='form-select'
    name='category'
    id='category-filter'
    data-value='{{category}}'
    aria-label='Default select'
  >
    <option value='' selected>全部類別</option>
    {{#each categorys}}
      <option value='{{this._id}}'>{{this.title}}</option>
    {{/each}}
  </select>
</form>

<ul>
  {{#each records}}
    <li>
      {{this.name}}/{{this.category}}/{{this.date}}/{{this.amount}}
    </li>
    <a href='./records/{{this._id}}/edit'>edit</a>
    <form
      action='./records/{{this._id}}/delete'
      method='POST'
      style='display: inline;'
    >
      <button type='submit'>delete</button>
    </form>
  {{/each}}
</ul>
<div class='mb-3 row'>
  <a href='./records/new'>
    <button type='submit' class='btn btn-primary col-6'>新增支出</button>
  </a>
</div>